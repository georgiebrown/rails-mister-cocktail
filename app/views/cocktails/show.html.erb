<div class="card">
  <h1><%= @cocktail.name %></h1>
  <div class="cocktail_card_image" style="background-image: url('https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60')" alt="Card image cap"></div>
  <h3>Ingredients:</h3>
   <% @cocktail.doses.each do |dose| %>
        <div class="card d-flex">
        <p><%= dose.description %> - <%= dose.ingredient.name %> | <%= link_to "X", dose_path(dose), method: :delete  %></p>
        </div>
      <% end %>
</div>
<div class="card">
  <%= link_to "Add Doses", new_cocktail_dose_path(@cocktail)  %>
</div>
<div class="card">
  <%= link_to "Back to Menu", cocktails_path  %>
</div>
