<h1>Cocktails</h1>
<div class="d-flex justify-content-between flex-wrap text-center">
  <% @cocktails.each do |cocktail| %>
    <div class="card m-5">
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-body">
      <h5 class="card-title"><%= cocktail.name %></h5>
      <%= link_to "Drink me", cocktail_path(cocktail), class: "btn btn-primary"%>
      </div>
    </div>
   <% end %>
</div>
<br>

